<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bDAO">

	<select id="select" parameterType="bDTO" resultMap="board_map">
		SELECT * FROM board
		WHERE id = #{id}
	</select>

	<resultMap type="bDTO" id="board_map">
		<result property="bno" column="bno" />
		<result property="title" column="title" />
		<result property="content" column="content" />
		<result property="writer" column="writer" />
		<result property="regdate" column="regdate" />
		<result property="viewcnt" column="viewcnt" />
	</resultMap>

	<select id="listAll" resultMap="board_map">
		SELECT * from board
	</select>

	<insert id="insert">
		INSERT INTO board(
		bno,
		title,
		content,
		writer
	) VALUES 
	(seq_board.nextval, #{title}, #{content}, #{writer)
	</insert>

	<!-- 게시글 상세보기 조회 -->
	<select id="view" resultMap="board_map">
		SELECT * FROM board
		WHERE bno = #{bno}
	</select>
	
	<!-- 게시글 조회수 증가처리 -->
	<update id="increaseViewcnt">
		UPDATE board SET viewcnt=viewcnt+1
		WHERE
		bno = #{bno}
	</update>
	
	<!-- 게시글 수정처리 -->
	<update id="updateArticle">
		UPDATE board SET
		title = #{title},
		content = #{content}
		WHERE bno = #{bno}
	</update>
	

	<delete id="delete" parameterType="bDTO">
		DELETE FROM board WHERE
		bno = #{bno}
	</delete>

</mapper>
